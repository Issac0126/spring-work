<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
    
<configuration>
	<settings>
		<!-- 
			MyBatis 에서 쿼리에 매핑되는 파라미터에 null이 들어가면 에러가 발생한다.
			value에 전달할 값이 null알 경우 처리할 값을 지정하면 
			그 값으로 데이터베이스에 값이 세팅된다. 
		 -->
		<setting name="jdbcTypeForNull" value="NULL"/>
		
		<!-- 데이터베이스로부터 응답을 얼마나 오래 기다리게 할 지를 판단하는 타임아웃 설정(밀리초) -->
		<!-- 시간이 지면 예외 처리를 한다. -->
		<setting name="defaultStatementTimeout" value="3000"/>
		
		<!-- 언더스코어 표기법을 카멜 케이스로 자동 변환하는 설정을 true로 설정 -->
		<!-- ex/  reg_date -> regDate -->
		<setting name="mapUnderscoreToCamelCase" value=""/>
	
	</settings>
	
	
	<typeAliases>
		<typeAlias type="com.spring.myweb.command.FreeBoardVO" alias="board"/>
	</typeAliases>
	
	<!-- 
		인터페이스 mapper 구현제 xml 파일의 경로를 표시하는 태그
		우리는 SqlSessionFactoryBean을 등록할 떄 이미 지정했기 때문에
		추가로 작성할 필요는 없다. (db-config에서 이미 선언함.) 

	<mappers>
		<mapper resource="classpath:/mappers/*Mapper.xml"/>
	</mappers>
	 -->


</configuration>
    
    
    








